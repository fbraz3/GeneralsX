		{
			"label": "Deploy GeneralsXZH (Windows)",
			"type": "shell",
			"command": "pwsh",
			"args": [
				"-Command",
				"$ZhExe = '${workspaceFolder}\\\\build\\\\win32\\\\GeneralsMD\\\\Release\\\\GeneralsXZH.exe'; $DeployDir = \"$env:USERPROFILE\\\\GeneralsX\\\\GeneralsMD\"; if (Test-Path $ZhExe) { Copy-Item -Path $ZhExe -Destination $DeployDir -Force; Write-Host \"Deploy successful: $DeployDir\\\\GeneralsXZH.exe\" -ForegroundColor Green } else { Write-Host \"Error: Executable not found at $ZhExe\" -ForegroundColor Red }"
			],
			"isBackground": false,
			"group": "build",
			"presentation": {
				"reveal": "always",
				"panel": "dedicated",
				"showReuseMessage": false,
				"clear": true,
				"focus": true
			}
		},
		{
			"label": "Deploy GeneralsX (Windows)",
			"type": "shell",
			"command": "pwsh",
			"args": [
				"-Command",
				"$GenExe = '${workspaceFolder}\\\\build\\\\win32\\\\Generals\\\\Release\\\\GeneralsX.exe'; $DeployDir = \"$env:USERPROFILE\\\\GeneralsX\\\\Generals\"; if (Test-Path $GenExe) { Copy-Item -Path $GenExe -Destination $DeployDir -Force; Write-Host \"Deploy successful: $DeployDir\\\\GeneralsX.exe\" -ForegroundColor Green } else { Write-Host \"Error: Executable not found at $GenExe\" -ForegroundColor Red }"
