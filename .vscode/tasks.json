{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Configure (Windows MSVC BuildTools, win32 preset)",
			"type": "shell",
			"command": "pwsh",
			"args": [
				"-Command",
				". .\\scripts\\setup_msvc_buildtools_env.ps1; cmake --preset win32 2>&1 | Tee-Object -FilePath ${workspaceFolder}\\logs\\configure_win32_msvc_buildtools.log"
			],
			"isBackground": false,
			"group": "build",
			"presentation": {
				"reveal": "always",
				"panel": "dedicated",
				"showReuseMessage": false,
				"clear": true,
				"focus": true
			}
		},
		{
			"label": "Build GeneralsXZH (Windows MSVC2022)",
			"type": "shell",
			"command": "pwsh",
			"args": [
				"-Command",
				". .\\scripts\\setup_msvc_buildtools_env.ps1; cmake --build build\\win32 --target z_generals --config Release --parallel 4 2>&1 | Tee-Object -FilePath ${workspaceFolder}\\logs\\build_zh_msvc2022.log"
			],
			"isBackground": false,
			"group": "build",
			"presentation": {
				"reveal": "always",
				"panel": "dedicated",
				"showReuseMessage": false,
				"clear": true,
				"focus": true
			}
		},
		{
			"label": "Build GeneralsX (Windows MSVC2022)",
			"type": "shell",
			"command": "pwsh",
			"args": [
				"-Command",
				". .\\scripts\\setup_msvc_buildtools_env.ps1; cmake --build build\\win32 --target g_generals --config Release --parallel 4 2>&1 | Tee-Object -FilePath ${workspaceFolder}\\logs\\build_generals_msvc2022.log"
			],
			"isBackground": false,
			"group": "build",
			"presentation": {
				"reveal": "always",
				"panel": "dedicated",
				"showReuseMessage": false,
				"clear": true,
				"focus": true
			}
		},
		{
			"label": "Deploy GeneralsXZH (Windows)",
			"type": "shell",
			"command": "pwsh",
			"args": [
				"-Command",
				". ${workspaceFolder}\\scripts\\deploy_zh.ps1"
			],
			"isBackground": false,
			"group": "build",
			"presentation": {
				"reveal": "always",
				"panel": "dedicated",
				"showReuseMessage": false,
				"clear": true,
				"focus": true
			}
		},
		{
			"label": "Deploy GeneralsX (Windows)",
			"type": "shell",
			"command": "pwsh",
			"args": [
				"-Command",
				". ${workspaceFolder}\\scripts\\deploy_zh.ps1 -Generals"
			],
			"isBackground": false,
			"group": "build",
			"presentation": {
				"reveal": "always",
				"panel": "dedicated",
				"showReuseMessage": false,
				"clear": true,
				"focus": true
			}
		},
		{
			"label": "Run GeneralsXZH (Windows MSVC2022)",
			"type": "shell",
			"command": "pwsh",
			"args": [
				"-Command",
				"cd $env:USERPROFILE\\GeneralsX\\GeneralsMD; if (Test-Path .\\GeneralsXZH.exe) { .\\GeneralsXZH.exe -win -noshellmap 2>&1 | Tee-Object -FilePath ${workspaceFolder}\\logs\\runTerminal_msvc2022.log } else { Write-Host 'Error: GeneralsXZH.exe not found. Run Deploy task first.' -ForegroundColor Red }"
			],
			"isBackground": false,
			"group": "test",
			"presentation": {
				"reveal": "always",
				"panel": "dedicated",
				"showReuseMessage": false,
				"clear": true,
				"focus": true
			}
		},
		{
			"label": "Run GeneralsX (Windows MSVC2022)",
			"type": "shell",
			"command": "pwsh",
			"args": [
				"-Command",
				"cd $env:USERPROFILE\\GeneralsX\\Generals; if (Test-Path .\\GeneralsX.exe) { .\\GeneralsX.exe -win 2>&1 | Tee-Object -FilePath ${workspaceFolder}\\logs\\runTerminal_generals_msvc2022.log } else { Write-Host 'Error: GeneralsX.exe not found. Run Deploy task first.' -ForegroundColor Red }"
			],
			"isBackground": false,
			"group": "test",
			"presentation": {
				"reveal": "always",
				"panel": "dedicated",
				"showReuseMessage": false,
				"clear": true,
				"focus": true
			}
		},
		{
			"label": "Debug GeneralsXZH (Windows MSVC2022)",
			"type": "shell",
			"command": "pwsh",
			"args": [
				"-Command",
				"cd $env:USERPROFILE\\GeneralsX\\GeneralsMD; if (Test-Path .\\GeneralsXZH.exe) { Write-Host 'Starting WinDbg debugger...' -ForegroundColor Cyan; WinDbgX.exe .\\GeneralsXZH.exe -win 2>&1 | Tee-Object -FilePath ${workspaceFolder}\\logs\\debugTerminal_msvc2022.log } else { Write-Host 'Error: GeneralsXZH.exe not found. Run Deploy task first.' -ForegroundColor Red }"
			],
			"isBackground": false,
			"group": "test",
			"presentation": {
				"reveal": "always",
				"panel": "dedicated",
				"showReuseMessage": false,
				"clear": true,
				"focus": true
			}
		},
		{
			"label": "Debug GeneralsX (Windows MSVC2022)",
			"type": "shell",
			"command": "pwsh",
			"args": [
				"-Command",
				"cd $env:USERPROFILE\\GeneralsX\\Generals; if (Test-Path .\\GeneralsX.exe) { Write-Host 'Starting WinDbg debugger...' -ForegroundColor Cyan; WinDbgX.exe .\\GeneralsX.exe -win 2>&1 | Tee-Object -FilePath ${workspaceFolder}\\logs\\debugTerminal_generals_msvc2022.log } else { Write-Host 'Error: GeneralsX.exe not found. Run Deploy task first.' -ForegroundColor Red }"
			],
			"isBackground": false,
			"group": "test",
			"presentation": {
				"reveal": "always",
				"panel": "dedicated",
				"showReuseMessage": false,
				"clear": true,
				"focus": true
			}
		},
		{
			"type": "cppbuild",
			"label": "C/C++: g++ build active file",
			"command": "/usr/bin/g++",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "Task generated by Debugger."
		}
	]
}
